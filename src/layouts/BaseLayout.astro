---
import Navigation from '../components/Navigation.astro';
import '../styles/layout.css';

interface Props {
    title: string;
}

const {title} = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{title}</title>
    </head>
    <body>
        <div class="layout">
            <Navigation/>
            <main>
                <div class="content">
                    <slot/>
                </div>
            </main>
        </div>
    </body>
</html>

