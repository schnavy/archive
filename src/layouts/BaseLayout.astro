---
import Navigation from '../components/Navigation.astro';
import '../styles/layout.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <div class="layout">
      <Navigation />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>